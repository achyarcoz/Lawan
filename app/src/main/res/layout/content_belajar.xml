<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.aljakarti.achyar.lawan.Belajar"
    tools:showIn="@layout/activity_belajar"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="1dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/tumbuhan"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/belkambing"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="Hewan Pemakan"
                android:textColor="@android:color/background_light"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_dark"
                android:gravity="center"
                android:text="TUMBUHAN"
                android:textColor="@android:color/background_light"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="1dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/daging"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/belmacantutul"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Hewan Pemakan"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@android:color/background_light"
                android:background="@color/colorPrimary"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="DAGING"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@android:color/background_light"
                android:background="@android:color/holo_red_dark"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="1dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/serangga"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/belkatak" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="Hewan Pemakan"
                android:textColor="@android:color/background_light"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_dark"
                android:gravity="center"
                android:text="SERANGGA"
                android:textColor="@android:color/background_light"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="1dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/segalanya"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/belkura" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Hewan Pemakan"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@android:color/background_light"
                android:background="@color/colorPrimary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_blue_light"
                android:gravity="center"
                android:text="SEGALANYA"
                android:textColor="@android:color/background_light"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
